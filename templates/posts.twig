{% extends 'layout.twig' %}
{% block content %}
    {#    <div class="container w-50"> #}
    {#        <div class="accordion" id="accordionExample"> #}
    <link rel="stylesheet" href="/css/posts.css"/>
    {% for post in posts %}
        <div class="container">
            <div class="card">
                <div class="box">
                    <div class="content">
                        <h2>{{ post['id'] }}</h2>
                        <h3>{{ post['name'] }}</h3>
                        <p>{{ post['content'] }}</p>
                        <a href="/post/{{ post['id'] }}">Read More</a>

                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {#        </div> #}
    {#    </div> #}
{% endblock %}
