{% extends 'layout.twig' %}

{% block content %}
<div class="container w-25 ">
    <form method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control {{ valid['emailValid'] }}" id="exampleInputEmail1" required
                   name="email" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            <div class="invalid-feedback">
                {{ valid['emailValidMessage'] }}
            </div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control {{ valid ['passValid'] }}" id="exampleInputPassword1" required name="password">
            <div class="invalid-feedback">
                {{ valid['passInvalidMessage'] }}
            </div>
        </div>
        <div class="row g-3 align-items-center">
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" required name="password-check">
            </div>
            <div class="col-auto">
                <span id="passwordHelpInline" class="form-text">
                    Must be 8-20 characters long.
                </span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{% endblock %}
